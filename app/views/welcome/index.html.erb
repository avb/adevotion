<% provide(:title, "A Bible Devotion") %>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <p class="text-right">
      <%= @verseToday.post_date.strftime("%A, %B %d, %Y") %>
    </p>
    <h3 class="text-center"><%= @verseToday.title %></h3>
  </div>
  <div class="col-md-2"></div>
</div>

<div class="row">

  <div class="col-md-2"></div>

  <div class="col-md-8">
    <p class="text">
    <%= simple_format(@verseToday.text) %>
    </p>
  </div>

  <div class="col-md-2"></div>
</div>    



















